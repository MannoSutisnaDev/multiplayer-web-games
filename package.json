{
  "name": "online-gaming-platform",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon - exec 'ts-node' src/server/index.ts",
    "start:old": "NODE_ENV=production ts-node src/server/index.ts",
    "lint": "next lint",
    "typescript-check": "tsc",
    "build:server": "tsc --project tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "build:next": "next build",
    "build": "npm run build:next && npm run build:server",
    "start": "node --env-file .env --env-file .env.local dist/server/index.js"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "@types/socket.io": "^3.0.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "express": "^4.18.2",
    "framer-motion": "^10.16.4",
    "next": "14.0.1",
    "react": "^18",
    "react-dom": "^18",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "prisma": "^5.5.2",
    "sass": "^1.69.5",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  }
}
