// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String  @id @default(cuid())
  username      String  @unique
  joinedLobbyId String?
  JoinedLobby   Lobby?  @relation(fields: [joinedLobbyId], references: [id], name: "lobby_player")
  connected     Boolean @default(false)
  ready         Boolean @default(false)
  LobbyItOwns   Lobby?  @relation("lobby_owner")
}

model Lobby {
  id           String     @id @default(cuid())
  name         String     @unique
  gameTypeId   String
  gameStarted  Boolean
  lobbyOwnerId String?    @unique
  LobbyOwner   User?      @relation(fields: [lobbyOwnerId], references: [id], name: "lobby_owner")
  GameType     GameType   @relation(fields: [gameTypeId], references: [id])
  Users        User[]     @relation("lobby_player")
  GameState    GameState? @relation("lobby_link")
}

model GameType {
  id         String  @id @default(cuid())
  name       String  @unique
  maxPlayers Int
  Lobby      Lobby[]
}

model GameState {
  lobbyId String @id @default(cuid())
  Lobby   Lobby  @relation(fields: [lobbyId], references: [id], name: "lobby_link")
  state   Bytes
}
